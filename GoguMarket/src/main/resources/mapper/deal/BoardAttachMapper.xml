<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.deal.BoardAttachMapper">

	<insert id="insert">
		insert into tbl_attach (uuid, upload_path, file_name, file_type, dl_no, file_size)
		values (#{uuid},#{uploadPath},#{fileName},#{fileType},#{dlNo},${fileSize})
	</insert>
	
	<delete id="delete">
		delete from tbl_attach where uuid = #{uuid}
	</delete>
	
	<select id="findByDlno" resultType="com.goguma.deal.vo.BoardAttachVO">
		select * from tbl_attach where dl_no = #{dlNo}
	</select>
</mapper>